<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_payment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e8dd"
    android:gravity="center_horizontal">

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/nakitodemebtn"
        android:background="@drawable/btn_blue_back"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:text="NAKIT ODEME"
        android:textSize="18dp"
        android:layout_marginTop="10dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:layout_margin="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="KREDI KARTI ILE ODEME"
        android:id="@+id/text3"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:id="@+id/kredikartibtn"
        android:background="@drawable/btn_red_back"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:text="KART OKUT"
        android:textSize="18dp"
        android:layout_marginTop="5dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:layout_margin="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kart numarasi"
        android:id="@+id/text1"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="95dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/creditNo"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:hint="#### #### #### ####"
        android:textSize="22dp"
        android:textAlignment="center"
        android:maxLength="16"
        android:paddingLeft="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Son kullanim tarihi :"
        android:id="@+id/text2"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="left"
        android:layout_marginLeft="50dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/expiracyDate"
        android:background="#ffffff"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="5dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/cvcNo"
        android:background="#ffffff"
        android:layout_gravity="right"
        android:layout_marginRight="50dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:id="@+id/payWithCredit"
        android:background="@drawable/btn_orange"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:text="Kredi Kartiyla Ode"
        android:textSize="18dp"
        android:layout_marginTop="15dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/cardLogos"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/credit_card_logos" />


</LinearLayout>